<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DetailFragment"
    tools:showIn="@layout/activity_detail"
    android:fillViewport="true">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">




    </android.support.design.widget.AppBarLayout>
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay">
        <TextView
            android:id="@+id/detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="30sp"
            android:text="Hello"
            android:textColor="#ffffff"/>
    </android.support.v7.widget.Toolbar>


        <ImageView
            android:id="@+id/detail_poster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:minHeight="150dp"
            android:minWidth="90dp"
            />

             <TextView
            android:id="@+id/detail_movie_info_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/detail_poster"
            android:layout_marginLeft="21dp"
            android:layout_marginStart="21dp"
            android:layout_toEndOf="@id/detail_poster"
            android:layout_toRightOf="@id/detail_poster"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/detail_movie_info_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:layout_alignLeft="@+id/detail_movie_info_date"
            android:layout_alignStart="@+id/detail_movie_info_date"
            android:layout_below="@id/detail_movie_info_date"/>

        <TextView
            android:id="@+id/detail_movie_info_votes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_below="@id/detail_movie_info_rating"
            android:layout_alignLeft="@+id/detail_movie_info_date"
            android:layout_alignStart="@+id/detail_movie_info_date"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/detail_movie_info_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail_poster"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:paddingTop="9dp"
            android:textSize="15sp"/>

    </RelativeLayout>




